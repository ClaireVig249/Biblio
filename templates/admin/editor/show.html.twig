{% extends 'base.html.twig' %}

{% block title %}Détail d'un éditeur{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper py-4">
    {% if editors is not null %}
    <h1>Editeur : </h1>
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ editors.name }}</h4>
                    <small class="text-muted">Identifiant : {{ editors.id }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                    {% for book in editors.books %}
                        <li class"list-group-item">{{book.name}}</li>
                        <p>{{ book.plot }}</p>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <a href="{{ path('app_admin_editor_edit', {id: editors.id}) }}" class="btn btn-warning my-4"> Modifier cet éditeur </a>
    {% else %}
        <div>
            <h2>Editeur non trouvé. Verifiez qu'il soit bien dans la bibliothèque.</h2>
            <h4>Ajouter un nouvel éditeur ?</h4>
        </div>
    {% endif %}
    <a href="{{ path('app_admin_editor_new') }}" class="btn btn-primary"> Ajouter un nouvel éditeur </a>
    <a href="{{ path('app_admin_editor_index') }}" class="btn btn-secondary"> Retour </a>
</div>
{% endblock %}