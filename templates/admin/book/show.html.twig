{% extends 'base.html.twig' %}

{% block title %}Détail d'un livre{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper py-4">
    {% if books is not null %}
    <h1>Livre : </h1>
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ books.title }}</h4>
                    <small class="text-muted">Identifiant : {{ books.id }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                     {% if books.authors is not null %}
                        {% for book in books %}
                            <li class="list-group-item">Auteurs : {{ book.authors }}</li>
                        {% endfor %}
                    {% endif %}

                    {% if books.editor is not null %}
                            <li class"list-group-item">Editeur : {{ book.editor }}</li>
                    {% endif %}

                    {% if books.pageNumber is not null %}
                        <li class="list-group-item">Nombre de pages : {{ books.pageNumber }}</li>
                    {% endif %} 
                    </ul>

                    <li class="list-group-item">Statut : {{ books.status.value }}</li>
                </div>
            </div>
        </div>
        
        <a href="{{ path('app_admin_book_edit', {id: books.id}) }}" class="btn btn-warning my-4"> Modifier ce livre </a>
    {% else %}
        <div>
            <h2>Livre non trouvé.</h2>
            <h4>Ajouter un nouveau livre ?</h4>
        </div>
    {% endif %}
    
    <a href="{{ path('app_admin_book_new') }}" class="btn btn-primary"> Ajouter un nouveau livre </a>
    <a href="{{ path('app_admin_book_index') }}" class="btn btn-secondary"> Retour </a>
</div>
{% endblock %}